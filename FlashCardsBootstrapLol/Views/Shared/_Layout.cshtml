<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-success container-fluid">
    @Html.ActionLink("Flash Cards Lol", "Index", "TestCard", new { area = "" }, new { @class = "navbar-brand", @style= "margin-right: 20px"})
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="input-group">
            <input type="text" class="form-control w-75">
            <div class="input-group-append">
                <button class="btn btn-outline-light" type="button">Search</button>
            </div>
        </div>
        <ul class="navbar-nav mr-auto" id="navbarSupportedContent">
            <li class="nav-item" style="margin-right: 15px">
                @Html.ActionLink("Create", "Index", "TestCard", new { area = "" }, new { @class = "btn btn-outline-light" })
            </li>
            <li class="nav-item" style="margin-right: 15px">
                @Html.ActionLink("Log In", "Index", "TestCard", new { area = "" }, new { @class = "btn btn-outline-light" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Settings", "Index", "TestCard", new { area = "" }, new { @class = "btn btn-outline-light" })
            </li>
        </ul>
    </div>
</nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FlashCards</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
